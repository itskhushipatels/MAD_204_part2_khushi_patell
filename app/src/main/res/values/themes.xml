<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Theme -->
    <style name="Theme.MyIntro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Apply button style -->
        <item name="buttonStyle">@style/GreenButton</item>
    </style>

    <!-- Green Button Style -->
    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
